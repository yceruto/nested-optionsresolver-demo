{
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/yceruto/options-resolver"
        }
    ],
    "require": {
        "ext-intl": "*",
        "ext-pdo": "*",
        "monolog/monolog": "^1.23",
        "swiftmailer/swiftmailer": "^6.0",
        "symfony/options-resolver": "dev-nested_options_resolver",
        "symfony/stopwatch": "^4.1"
    },
    "config": {
        "platform": {
            "php": "7.1.3"
        },
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    }
}
